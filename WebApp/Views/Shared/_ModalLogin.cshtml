@using Infrastructure.Resources
<div hidden="true">
    <div id="modalLogin" tabindex="-1"> 
        <div class="modal-login">
		    <h3 class="title">@LoginResource.Title</h3>
		    <div class="content">
			    <p>@LoginResource.Directions</p>
			    <form action="#" method="post" id="formLogin" class="form form-contato">
				    <span class="form-item">
					    <label for="emailLogin">@LoginResource.Email</label>
					    <input type="text" class="form-text" id="emailLogin" name="Email" maxlength="30">
				    </span>
				    <span class="form-item">
					    <label for="password">@LoginResource.Password</label>
					    <input type="password" class="form-text" id="password" name="Password" maxlength="10">
				    </span>
				    <span class="form-item link">
					    <a href="@Url.Action("ForgotPassword", "Account")" title="@LoginResource.RecoverPassword" id="btRecuperarSenha" data-modal="modalRecuperarSenha">@LoginResource.ForgotPassword</a>
				    </span>
                    <span class="form-item">
                        <label id="invalidUser"></label>
				    </span>
				    <span class="form-item actions">
					    <input type="submit" id="loginUser" value="@LoginResource.Send" class="btn">
				    </span>					
			    </form>	
			    <div class="call-to-action">
				    @LoginResource.NotYetRegistered <a href="@Url.Action("Register", "Account")" title="@LoginResource.GoToRegister">@LoginResource.RegistersUp</a>
			    </div>
		    </div>
	    </div>
    </div>
</div>